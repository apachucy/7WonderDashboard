<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="@color/blue_nypd" />

            <stroke android:width="@dimen/button_stroke_width" android:color="@android:color/white" />

            <corners android:radius="@dimen/button_radious" />

            <padding android:bottom="@dimen/button_padding" android:left="@dimen/button_padding" android:right="@dimen/button_padding" android:top="@dimen/button_padding" />
        </shape></item>
    <item android:state_enabled="true"><shape>
            <gradient android:angle="270" android:endColor="@color/blue_pacific" android:startColor="@color/blue_diamond" />

            <stroke android:width="@dimen/button_stroke_width" android:color="@android:color/white" />

            <corners android:radius="@dimen/button_radious" />

            <padding android:bottom="@dimen/button_padding" android:left="@dimen/button_padding" android:right="@dimen/button_padding" android:top="@dimen/button_padding" />
        </shape></item>
    <item><shape>
            <solid android:color="@android:color/white" />

            <stroke android:width="@dimen/button_stroke_width" android:color="@android:color/white" />

            <corners android:radius="@dimen/button_radius" />

            <padding android:bottom="@dimen/button_padding" android:left="@dimen/button_padding" android:right="@dimen/button_padding" android:top="@dimen/button_padding" />
        </shape></item>

</selector>